{
  "name": "vscode-koverage",
  "publisher": "tenninebt",
  "displayName": "Koverage",
  "keywords": [
    "coverage",
    "lcov",
    "jacoco"
  ],
  "repository": "https://github.com/tenninebt/vscode-koverage",
  "description": "View the code coverage per folder/file in the test view",
  "version": "0.0.14",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [
    "onView:koverage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "koverage",
      "properties": {
        "koverage.coverageCommand": {
          "type": "string",
          "default": "",
          "description": "command to run to generate coverage",
          "scope": "resource"
        },
        "koverage.coverageFileNames": {
          "type": "array",
          "default": [
            "lcov.info",
            "cov.xml",
            "coverage.xml",
            "jacoco.xml"
          ],
          "description": "coverage file names for the extension to automatically look for",
          "scope": "resource"
        },
        "koverage.coverageFilePaths": {
          "type": "array",
          "default": [
            "**"
          ],
          "description": "coverage file paths for the extensions to automatically search in",
          "scope": "resource"
        },
        "koverage.ignoredPathGlobs": {
          "type": "string",
          "default": "**/{node_modules,venv,.venv,vendor}/**",
          "scope": "resource"
        },
        "koverage.lowCoverageThreshold": {
          "type": "number",
          "default": 50,
          "description": "coverage threshold considered too low",
          "scope": "resource"
        },
        "koverage.sufficientCoverageThreshold": {
          "type": "number",
          "default": 70,
          "description": "coverage threshold considered sufficient",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "koverage.generate",
        "title": "Generate",
        "icon": {
          "dark": "resources/dark/play-circle.svg",
          "light": "resources/light/play-circle.svg"
        }
      },
      {
        "command": "koverage.refresh",
        "title": "Refresh",
        "icon": {
          "dark": "resources/dark/refresh.svg",
          "light": "resources/light/refresh.svg"
        }
      },
      {
        "command": "koverage.openFile",
        "title": "Open"
      }
    ],
    "views": {
      "test": [
        {
          "id": "koverage",
          "name": "Koverage"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "koverage.generate",
          "group": "navigation",
          "when": "view == koverage"
        },
        {
          "command": "koverage.refresh",
          "when": "view == koverage",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "koverage.openFile",
          "when": "view == koverage && viewItem == FileCoverageNode"
        }
      ]
    }
  },
  "scripts": {
    "build:prod": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "compile": "tsc",
    "lint": "eslint ./src"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@vscode/vsce": "^2.18.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "ovsx": "^0.8.0",
    "typescript": "^5.0.3",
    "vscode-test": "^1.3.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@7sean68/jacoco-parse": "2.2.0",
    "@cvrg-report/clover-json": "0.3.2",
    "@vscode-logging/logger": "^1.2.3",
    "cobertura-parse": "fschwaiger/cobertura-parse#82b0333cb1580f6f337b5d44b04e2f5ca8711b7e",
    "lcov-parse": "1.0.0",
    "rxjs": "^7.8.0"
  },
  "resolutions": {
    "minimist": "^1.2.8",
    "mocha": "^10.2.0",
    "mkdirp": "^3.0.1"
  }
}